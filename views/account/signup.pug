extends ../layout

block content
  .page-header
    h3 Sign up
    hr
  form.form-horizontal(id='signup-form', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group.row.justify-content-md-center
      label.col-sm-3.col-form-label.text-right.font-weight-bold(for='name') First name
      .col-sm-7
        input.form-control(type='text', name='firstName', id='firstName', placeholder='Popescu', autofocus, required)
    .form-group.row.justify-content-md-center
      label.col-sm-3.col-form-label.text-right.font-weight-bold(for='name') Last name
      .col-sm-7
        input.form-control(type='text', name='lastName', id='lastName', placeholder='Ion', autofocus, required)
    .form-group.row.justify-content-md-center
      label.col-sm-3.col-form-label.text-right.font-weight-bold(for='city') City
      .col-sm-7
        select#city.select.form-control.input-md(name='city')
          option(value=0) -- Select --
          option(value=1) Bucharest
          option(value=2) Brașov
          option(value=3) Cluj
          option(value=4) Iași
          option(value=5) Timișoara
    .form-group.row.justify-content-md-center
      label.col-sm-3.col-form-label.text-right.font-weight-bold(for='role') Role
      .col-sm-7
        select#role.select.form-control.input-md(name='role')
          option(value=0) -- Select --
          option(value=1) Student
          option(value=2) Profesor
          option(value=3) Secretar
    .form-group.row.justify-content-md-center
      label.col-sm-3.col-form-label.text-right.font-weight-bold(for='name') Phone no
      .col-sm-7
        input.form-control(type='text', name='phoneNo', id='phoneNo', placeholder='0712345678', autofocus, required)
    .form-group.row.justify-content-md-center
      label.col-sm-3.col-form-label.text-right.font-weight-bold(for='email') Email
      .col-sm-7
        input.form-control(type='email', name='email', id='email', placeholder='popescu.ion@companie.ro', autofocus, required)
    .form-group.row.justify-content-md-center
      label.col-sm-3.col-form-label.text-right.font-weight-bold(for='password') Password
      .col-sm-7
        input.form-control(type='password', name='password', id='password', placeholder='Tastați parola aici', required)
    .form-group.row.justify-content-md-center
      label.col-sm-3.col-form-label.text-right.font-weight-bold(for='confirmPassword') Confirmare password
      .col-sm-7
        input.form-control(type='password', name='confirmPassword', id='confirmPassword', placeholder='Tastați parola din nou', required)
    .form-group.row.justify-content-md-center
      label.col-sm-3.col-form-label.text-right.font-weight-bold(for='grade') Grade (only professors)
      .col-sm-7
        select#grade.select.form-control.input-md(name='grade')
          option(value=0) -- Select --
          option(value=1) Assistent
          option(value=2) Lector
          option(value=3) Conferentiary
          option(value=4) Professor
    .form-group.row.justify-content-md-center
      .offset-sm-3.col-sm-7
        button.btn.btn-success(type='submit')
          i.fa.fa-user-plus
          | Sign up
